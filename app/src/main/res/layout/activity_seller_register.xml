<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".SellerRegisterActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/logopic" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/logo"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="@color/green"
                android:textSize="40dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/logtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/passbtn"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/textView5"
                android:text="Login"
                android:textColor="#025A0F"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="253dp"
                tools:layout_editor_absoluteY="695dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/passbtn"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:text="Already A Member?"
                android:textSize="15dp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="686dp" />
            <LinearLayout
                android:id="@+id/LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Email"
                android:orientation="horizontal">
            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/Phone"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/Phone"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_weight="2"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/green"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="289dp" />
            </LinearLayout>
            <EditText
                android:id="@+id/RegPasswd"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_below="@id/LL"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:backgroundTint="@color/green"
                android:hint="Create Password"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="354dp" />

            <EditText
                android:id="@+id/Name"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_below="@id/textView6"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:ems="10"
                android:backgroundTint="@color/green"
                android:hint="Your Name"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="162dp" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_below="@id/Name"
                android:layout_marginLeft="35dp"
                android:backgroundTint="@color/green"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:hint="Your Email"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="226dp" />


            <EditText
                android:id="@+id/ConfRegPasswd"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_below="@id/RegPasswd"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/green"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="419dp" />

            <EditText
                android:id="@+id/UPIid"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_below="@id/ConfRegPasswd"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:backgroundTint="@color/green"
                android:hint="UPI ID"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="481dp" />

            <Spinner
                android:id="@+id/SellerType"
                android:layout_width="250dp"
                android:layout_height="47dp"
                android:layout_below="@id/UPIid"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/spinnerbg"
                android:prompt="@string/spinner_title"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="544dp" />
            <Button
                android:id="@+id/passbtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/SellerType"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/green"
                android:backgroundTintMode="add"
                android:elevation="100dp"
                android:text="get otp"
                app:cornerRadius="5dp"
                app:strokeColor="@color/green"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="600dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>