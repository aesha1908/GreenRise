<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/CV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/userpic" />

                <TextView
                    android:id="@+id/Uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="User Name"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CV1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CV"
            android:layout_marginTop="55dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/Uorders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/orders"
                    android:drawableTint="@color/green"
                    android:gravity="center_vertical"
                    android:text="My Orders"
                    android:textColor="@color/green" />

                <Button
                    android:id="@+id/Uwish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Uorders"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/orders"
                    android:drawableTint="@color/green"
                    android:gravity="center_vertical"
                    android:text="My wishlist"
                    android:textColor="@color/green" />

                <Button
                    android:id="@+id/UInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Uwish"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/useri"
                    android:drawableTint="@color/green"
                    android:gravity="center_vertical"
                    android:text="Personal Info"
                    android:textColor="@color/green" />

                <Button
                    android:id="@+id/Usts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/UInfo"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/buyer"
                    android:drawableTint="@color/green"
                    android:gravity="center_vertical"
                    android:text="Switch To Seller"
                    android:textColor="@color/green" />

                <Button
                    android:id="@+id/Uchpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Usts"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/chnagepasss"
                    android:drawableTint="@color/green"
                    android:gravity="center_vertical"
                    android:text="Change Password"
                    android:textColor="@color/green" />


                <Button
                    android:id="@+id/languagechanger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Uchpw"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/chlang"
                    android:drawableTint="@color/green"
                    android:gravity="center_vertical"
                    android:text="Change Language"
                    android:textColor="@color/green" />

                <Button
                    android:id="@+id/Ulog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/languagechanger"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/log"
                    android:drawableTint="@color/green"
                    android:gravity="center_vertical"
                    android:text="Log Out"
                    android:textColor="@color/green" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</FrameLayout>