<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_reg"
    tools:context=".UserOTPActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/logopic" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/logo"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="OTP verification"
                android:textAllCaps="false"
                android:textColor="#025A0F"
                android:textSize="36dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="118dp" />

            <LinearLayout
                android:id="@+id/LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/umobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Mobile number"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="266dp"
                    tools:layout_editor_absoluteY="611dp" />

                <TextView
                    android:id="@+id/uchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="2"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="(CHANGE)"
                    android:textColor="@color/green"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="266dp"
                    tools:layout_editor_absoluteY="611dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LL"
                android:orientation="horizontal"
                android:weightSum="6">

                <EditText
                    android:id="@+id/uot1"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="phone"
                    android:background="@drawable/etborder"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="313dp" />

                <EditText
                    android:id="@+id/uot2"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="phone"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="313dp" />

                <EditText
                    android:id="@+id/uot3"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="phone"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="313dp" />

                <EditText
                    android:id="@+id/uot4"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="phone"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="313dp" />

                <EditText
                    android:id="@+id/uot5"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="phone"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="313dp" />

                <EditText
                    android:id="@+id/uot6"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/etborder"
                    android:gravity="center"
                    android:maxLength="1"
                    android:inputType="phone"
                    tools:layout_editor_absoluteX="76dp"
                    tools:layout_editor_absoluteY="313dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LL1"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Didn't get otp?"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="266dp"
                    tools:layout_editor_absoluteY="611dp" />

                <TextView
                    android:id="@+id/utvtimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="266dp"
                    tools:layout_editor_absoluteY="611dp" />

                <TextView
                    android:id="@+id/uresend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="2"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Resend"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="266dp"
                    tools:layout_editor_absoluteY="611dp" />
            </LinearLayout>

            <Button
                android:id="@+id/ubtnotp"
                android:layout_width="262dp"
                android:layout_height="48dp"
                android:layout_below="@id/LL2"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/green"
                android:text="verify"
                android:textColor="#ffffff"
                android:textStyle="bold"
                app:cornerRadius="5dp"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="459dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>