<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_login_reg"
    tools:context=".PhoneActivity">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logopic" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginStart="15dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/logo"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Change Number"
                android:textAllCaps="false"
                android:textColor="#025A0F"
                android:textSize="36dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="118dp" />

                <EditText
                    android:id="@+id/mobilenew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:layout_below="@id/textView2"
                    android:gravity="center"
                    android:text="Mobile number"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteX="266dp"
                    tools:layout_editor_absoluteY="611dp" />

            <Button
                android:id="@+id/btnotpnew"
                android:layout_width="262dp"
                android:layout_height="48dp"
                android:layout_below="@id/mobilenew"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/green"
                android:text="get otp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                app:cornerRadius="5dp"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="459dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>