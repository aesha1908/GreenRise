<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".checkoutFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            app:cardElevation="5dp"
            android:background="@color/grey"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Your Shipping Address &amp; Contact Info"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/LL"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/text"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/UFname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/text"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/backet"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:textColorHint="#606060"
                        tools:layout_editor_absoluteX="101dp"
                        tools:layout_editor_absoluteY="123dp" />

                    <EditText
                        android:id="@+id/ULname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/UFname"
                        android:layout_weight="1"
                        android:background="@drawable/backet"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:textColorHint="#606060"
                        tools:layout_editor_absoluteX="101dp"
                        tools:layout_editor_absoluteY="123dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/UAddhouse"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/LL"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/backet"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="House no./Building/Flat"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textColorHint="#606060"
                    tools:layout_editor_absoluteX="101dp"
                    tools:layout_editor_absoluteY="123dp" />

                <EditText
                    android:id="@+id/UAddland"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/UAddhouse"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/backet"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Area/Street/Landmark"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textColorHint="#606060"
                    tools:layout_editor_absoluteX="101dp"
                    tools:layout_editor_absoluteY="123dp" />

                <LinearLayout
                    android:id="@+id/LL1"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/UAddland"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/UCity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/text"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/backet"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="City"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:textColorHint="#606060"
                        tools:layout_editor_absoluteX="101dp"
                        tools:layout_editor_absoluteY="123dp" />

                    <EditText
                        android:id="@+id/UZip"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/UFname"
                        android:layout_weight="1"
                        android:background="@drawable/backet"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:hint="Zip"
                        android:inputType="phone"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:textColorHint="#606060"
                        tools:layout_editor_absoluteX="101dp"
                        tools:layout_editor_absoluteY="123dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/UPhone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/LL1"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/backet"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textColorHint="#606060"
                    tools:layout_editor_absoluteX="101dp"
                    tools:layout_editor_absoluteY="123dp" />

                <LinearLayout
                    android:id="@+id/LL2"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/UPhone"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/backet"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/totaltv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/text"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:fontFamily="serif"
                        android:gravity="start|center"
                        android:hint="Amount Payable"
                        android:inputType="textPersonName"
                        android:textColor="#606060"
                        tools:layout_editor_absoluteX="101dp"
                        tools:layout_editor_absoluteY="123dp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/LL"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:gravity="center|end"
                        android:text="TextView"
                        android:textColor="@color/green"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/LL2"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="#77EC79"
                    android:fontFamily="serif"
                    android:text="Proceed to Pay"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:cornerRadius="10dp" />

                <TextView
                    android:id="@+id/quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button6"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:fontFamily="cursive"
                    android:padding="5sp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</FrameLayout>