<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".SellerHomeActivity">

    <ImageView
        android:id="@+id/imagelogo"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/logopic" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_below="@id/imagelogo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@color/grey"
        app:cardCornerRadius="10dp">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="Add Product"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/viewline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/textView7"
                    android:layout_marginBottom="5dp"
                    android:background="@color/grey" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:text="Product Name"
                    android:textColor="@color/green"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Pname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borderet"
                    android:drawableRight="@drawable/plantt"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textColorHint="#606060"
                    tools:layout_editor_absoluteX="101dp"
                    tools:layout_editor_absoluteY="123dp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:text="Description"
                    android:textColor="@color/green"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Pabout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borderet"
                    android:drawableRight="@drawable/linesd"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="Product Description"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textColorHint="#606060"
                    tools:layout_editor_absoluteX="101dp"
                    tools:layout_editor_absoluteY="189dp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:text="Price"
                    android:textColor="@color/green"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Pprice"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borderet"
                    android:drawableRight="@drawable/rsd"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="30 Rs."
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textColorHint="#606060"
                    tools:layout_editor_absoluteX="101dp"
                    tools:layout_editor_absoluteY="256dp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="left"
                    android:text="Quantity"
                    android:textColor="@color/green"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/Pquantity"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/borderet"
                    android:drawableRight="@drawable/labeld"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:hint="4000 products"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:textColorHint="#606060"
                    tools:layout_editor_absoluteX="101dp"
                    tools:layout_editor_absoluteY="324dp" />

                <Spinner
                    android:id="@+id/spinnertype"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/spinnerbg" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/upload"
                        android:layout_width="169dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#77EC79"
                        android:text="Choose Image"
                        android:textColor="#025A0F"
                        app:cornerRadius="10dp"
                        tools:layout_editor_absoluteX="57dp"
                        tools:layout_editor_absoluteY="439dp" />

                    <ImageView
                        android:id="@+id/pimage"
                        android:layout_width="117dp"
                        android:layout_height="117dp"
                        android:layout_marginLeft="10dp"
                        tools:layout_editor_absoluteX="272dp"
                        tools:layout_editor_absoluteY="417dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#77EC79"
                        android:text="Add product"
                        android:textColor="#025A0F"
                        app:cornerRadius="10dp"
                        tools:layout_editor_absoluteX="48dp"
                        tools:layout_editor_absoluteY="554dp" />

                    <Button
                        android:id="@+id/view"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="#77EC79"
                        android:text="View product"
                        android:textColor="#025A0F"
                        app:cornerRadius="10dp"
                        tools:layout_editor_absoluteX="48dp"
                        tools:layout_editor_absoluteY="554dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottomnav" />
</RelativeLayout>